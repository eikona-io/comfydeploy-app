{
  "rewrites": [
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "host",
          "value": "app.comfydeploy.com"
        }
      ],
      "destination": "https://comfy-api-production.up.railway.app/api/:path*"
    },
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "host",
          "value": "beta.app.comfydeploy.com"
        }
      ],
      "destination": "https://prod-staging.api.comfydeploy.com/api/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://staging.api.comfydeploy.com/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}