{
  "rewrites": [
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "host",
          "value": "staging.app.comfydeploy.com"
        }
      ],
      "destination": "https://staging.api.comfydeploy.com/api/:path*"
    },
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "host",
          "value": ":preview.vercel.app"
        }
      ],
      "destination": "https://staging.api.comfydeploy.com/api/:path*"
    },
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "host",
          "value": "app.comfydeploy.com"
        }
      ],
      "destination": "https://api.comfydeploy.com/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}